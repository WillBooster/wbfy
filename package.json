{
  "name": "wbfy",
  "version": "0.0.0-semantically-released",
  "description": "A tool for applying WillBooster's conventional configures to npm packages",
  "repository": "github:WillBooster/wbfy",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "type": "module",
  "bin": "./bin/wbfy.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "build-ts app",
    "check-for-ai": "yarn install > /dev/null && yarn format > /dev/null && yarn lint-fix --quiet && yarn typecheck && yarn test --silent",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "postinstall": "husky || true",
    "lint": "eslint --color",
    "lint-fix": "yarn lint --fix",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepare": "husky || true",
    "prettify": "prettier --cache --color --write \"**/{.*/,}*.{cjs,css,cts,htm,html,js,json,json5,jsonc,jsx,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}\" \"!**/test{-,/}fixtures/**\"",
    "release": "yarn build && semantic-release",
    "start": "build-ts run src/index.ts --env .env --",
    "start-prod": "yarn build && yarn wbfy",
    "test": "vitest tests",
    "test/ci-setup": "cd .. && pwd && rm -Rf test-fixtures-for-wbfy && git clone https://github.com/WillBooster/test-fixtures-for-wbfy.git",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "@octokit/core": "7.0.2",
    "@willbooster/shared-lib": "5.4.4",
    "@willbooster/shared-lib-node": "6.2.3",
    "deepmerge": "4.3.1",
    "dotenv": "16.5.0",
    "fast-glob": "3.3.3",
    "fastest-levenshtein": "1.0.16",
    "js-yaml": "4.1.0",
    "libsodium-wrappers": "0.7.15",
    "lodash.clonedeep": "4.5.0",
    "minimal-promise-pool": "4.1.3",
    "simple-git": "3.28.0",
    "yargs": "18.0.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@types/eslint": "8.56.11",
    "@types/jest": "30.0.0",
    "@types/js-yaml": "4.0.9",
    "@types/libsodium-wrappers": "0.7.14",
    "@types/lodash.clonedeep": "4.5.9",
    "@types/micromatch": "4.0.9",
    "@types/node": "22.15.32",
    "@types/yargs": "17.0.33",
    "@willbooster/eslint-config-ts": "11.3.0",
    "@willbooster/prettier-config": "10.1.0",
    "@yarnpkg/core": "4.4.2",
    "build-ts": "15.0.6",
    "conventional-changelog-conventionalcommits": "9.0.0",
    "eslint": "9.29.0",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-sort-class-members": "1.21.0",
    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-unicorn": "59.0.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "jest": "30.0.2",
    "lint-staged": "16.1.2",
    "micromatch": "4.0.8",
    "pinst": "3.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-java": "2.6.8",
    "semantic-release": "24.2.5",
    "sort-package-json": "3.3.1",
    "ts-node": "10.9.2",
    "type-fest": "4.41.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.0",
    "vitest": "3.2.4"
  },
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
